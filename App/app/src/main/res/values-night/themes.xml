<resources>
    <!-- Base application theme. -->
    <style name="Theme.MyCity" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/orange1</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/orange1</item>
        <item name="colorOnPrimaryContainer">@color/white</item>
        <item name="colorPrimaryVariant">@color/alternative_orange</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white_orange</item>
        <item name="colorOnSecondary">@color/white_orange</item>
        <item name="colorSecondaryContainer">@color/white_orange</item>
        <item name="colorOnSecondaryContainer">@color/white_orange</item>
        <item name="colorSecondaryVariant">@color/white_orange</item>
        <!-- Ternary brand color. -->
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorTertiaryContainer">@color/orange1_1</item>
        <item name="colorOnTertiaryContainer">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorSurface">@color/orange_surface</item>
    </style>
</resources>