<resources>
    <!-- Base application theme. -->
    <style name="Theme.MyCity" parent="Theme.Material3.DynamicColors.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange1</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/orange1</item>
        <item name="colorOnPrimaryContainer">@color/white</item>
        <item name="colorPrimaryVariant">@color/alternative_orange</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorOnSecondary">@color/brown</item>
        <item name="colorSecondaryContainer">@color/transparent_brown</item>
        <item name="colorOnSecondaryContainer">@color/brown</item>
        <item name="colorSecondaryVariant">@color/brown</item>
        <!-- Ternary brand color. -->
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorTertiaryContainer">@color/orange1_1</item>
        <item name="colorOnTertiaryContainer">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorSurface">@color/orange_surface</item>
    </style>

    <style name="Theme.MyCity.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyCity.NoActionBar.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_screen</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.MyCity</item>
    </style>

    <style name="Theme.MyCity.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyCity.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.MyCity.NoActionBar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyCity.NoActionBar.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyCity.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>